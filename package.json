{
  "name": "electron-template",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "preinstall": "npx simple-git-hooks",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron-uikit/core": "^1.0.0",
    "@electron-uikit/titlebar": "^1.1.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.16.13",
    "@unocss/eslint-plugin": "^0.63.4",
    "@unocss/preset-icons": "^0.63.4",
    "@unocss/preset-rem-to-px": "^0.63.4",
    "@unocss/preset-tagify": "^0.63.4",
    "@unocss/transformer-directives": "^0.63.4",
    "@unocss/transformer-variant-group": "^0.63.4",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "color-thief-ts": "^1.1.1",
    "electron": "^31.7.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "naive-ui": "^2.40.1",
    "prettier": "^3.3.3",
    "sass": "^1.80.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.3",
    "unocss": "^0.63.4",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.9",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "vue-tsc": "^2.1.6"
  },
  "resolutions": {
    "eslint": "^9.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run typecheck",
    "pre-push": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "git add ."
    ],
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "prettier --write"
    ]
  }
}
