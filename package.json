    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "electron",
      "esbuild",
      "simple-git-hooks"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npm run typecheck",
    "pre-push": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "git add ."
    ],
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "prettier --write"
    ]
  }
