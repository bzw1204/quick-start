    "@unocss/transformer-directives": "66.2.3",
    "@unocss/transformer-variant-group": "66.2.3",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "color-thief-ts": "^1.1.1",
